include-file = ~/.config/polybar/modules/pulseaudio

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

;; Bar Settings

[bar/bottom]
monitor =
monitor-fallback =
monitor-strict = false
override-redirect = false

; Put the bar at the bottom of the screen
bottom = true

fixed-center = true

width = 100%
height = 20

offset-x = 0
offset-y = 0

background = ${colours.bg}
foreground = ${colours.fg}
radius-top = 0.0
radius-bottom = 0.0

line-size = 2
line-color = ${colours.primary}

border-top-size = 2
border-color = ${colours.primary}

padding = 1

module-margin-left = 1
module-margin-right = 1

font-0 = "FontAwesome:size=12;1"
font-1 = "siji:size=12;1"
font-2 = "Termsynu:size=12;1"

modules-left = launcher code firefox terminal files
modules-center = filesystem cpu memory temperature network
modules-right = pulseaudio brightness

; The separator will be inserted between the output of each module
separator =

; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value = 1.0

wm-name = 

; Locale used to localize various module data (e.g. date)
; Expects a valid libc locale, for example: sv_SE.UTF-8
locale = 

tray-position = none
tray-detached = false
tray-maxsize = 16
tray-background = ${root.background}

tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1.0

enable-ipc = false

